 <h2>Follow Users</h2>
 <% if @users.exists? %>
    <table class= "table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followings.count %></td>
            <td><%= link_to "Show", user_path(user)  %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
   <p>ユーザーはいません</p>
  <% end %>