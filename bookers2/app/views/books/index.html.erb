<p id="notice"></p>
<div class= "container px-5 px-sm-0">

  <% if @book.errors.any? %>
    <div class= "text-danger">
      <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class= "row">
    <div class= "col-md-3">
      <%= render 'books/userinfo', book: @book, user: @user %>
    </div>

    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <div id= "sort"><%= render 'books/sort' %></div>
        <table class= "table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th>Rate</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
              <td>
                <div id="star-rate-<%= book.id %>"></div>
                <script>
                  $("#star-rate-<%= book.id %>").raty({
                  size: 36,
                  starOn: "/assets/star-on.png",
                  starOff: "/assets/star-off.png",
                  readOnly: true,
                  score: <%= book.rate %>,
                  });
                </script>
              </td>
              <td id="favorite-btn_<%= book.id %>">
                <%= render 'favorites/favorite-btn',book: book %>
              </td>
              <td>
                <%= link_to "コメント数: #{book.post_comments.count}", book_path(book.id) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>

